@model WebApp.Models.PoleImage

@{
    ViewBag.Title = "Create";
}


<style type="text/css">
    #dropZone {
        background: gray;
        border: black dashed 3px;
        width: 200px;
        padding: 50px;
        text-align: center;
        color: white;
    }
</style>

@section scripts {
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/dropzonescss")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/dropzonescripts")



<script>



</script>
}
@using (Html.BeginForm("Create", "PoleImage", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(i => i.ImageMapPath)
    <div class="form-horizontal">
        <h4>Pole Image</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" >
            @Html.LabelFor(model => model.PoleInfoID, "PoleInfoID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PoleInfoID, (SelectList)ViewBag.PoleInfoID, String.Empty)
                @Html.ValidationMessageFor(model => model.PoleInfoID)
            </div>
        </div>



        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


