@model IEnumerable<WebApp.Models.PoleInfoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Pole Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Import Excel Data", "Import")
</p>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.PoleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskAddeddate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskPerformeddate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AdjacentPoleHeight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PoleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskAddeddate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskPerformeddate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.AdjacentPoleHeight)
        </td>

        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
